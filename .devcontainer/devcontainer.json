{
  "name": "AI Project Development",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter"
      ]
    }
  },
  
  "postCreateCommand": "pip install -r requirements.txt && pip install -r dashboard/requirements.txt",
  
  "postStartCommand": "echo $(date -u +%FT%TZ) $HOSTNAME $USER > .provenance/ATTESTATION.log",
  
  "remoteUser": "vscode"
}